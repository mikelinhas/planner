<!DOCTYPE html>
<html lang="en" ng-app="app">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title> BSS | teams! </title>

    <!-- ICON -->
    <link href="/drop.ico" rel="icon" type="image/x-icon" />


    <!-- CSS  -->
    <link rel="stylesheet" href="/libs/css/font-awesome.min.css">
    <link rel="stylesheet" href="/libs/css/bootstrap.min.css"/>

    
    <!-- Page Specific CSS -->

    <!-- JavaScripts -->
    <script rel="javascript" src="/libs/js/jquery.min.js"></script>
    <script rel="javascript" src="/libs/js/bootstrap.min.js"></script>
    <script rel="javascript" src="/libs/js/angular.min.js"></script>
    <script rel="javascript" src="/libs/js/ui-bootstrap-tpls-0.11.2.js"></script>
    <script rel="javascript" src="/libs/js/ui-grid-unstable.js"></script>

    <!-- Page Specific JS -->
    <script rel="javascript" src="/libs/js/app.js"></script>

  </head>


  <body>

    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <i class="fa fa-yelp fa-lg"></i>
          </button>
          <a class="navbar-brand" href="/">BSS</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/settings"> Settings 
                <i class="fa fa-wrench fa-lg" style="margin-left:2px"> </i>
              </a>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->

      </div>
    </div>
    <div class="container" ng-controller="SettingsCtrl">
      <div class="container col-sm-4">
        <h1>Add Workers</h1>
        <form name="excel" style="margin-bottom: 5px">
          <textarea class="form-control" rows="6" 
                ng-model="data.workers" 
                placeholder="pégalos aquí en formato JSON">
          </textarea>
          <br>
          <button type="button" class="btn btn-success pull-right" 
                  ng-click="importWorkers(data.workers)">
              Add 
              <i class="fa fa-plus"></i>
          </button>
        </form>
      </div>
      
      <div class="container col-sm-4">
        <h1>Add Projects</h1>
        <form name="excel" style="margin-bottom: 5px">
          <textarea class="form-control" rows="6" 
                ng-model="data.projects" 
                placeholder="pégalos aquí en format JSON">
          </textarea>
          <br>
          <button type="button" class="btn btn-success pull-right" 
                  ng-click="addProjects(data.projects)">
              Add 
              <i class="fa fa-plus"></i>
          </button>
        </form>
      </div>
      
      <div class="container col-sm-4">
        <h1>Add Events</h1>
        <form name="excel" style="margin-bottom: 5px">
          <textarea class="form-control" rows="6" 
                ng-model="data.events" 
                placeholder="{worker_id: - , project: - , start: dd/mm/yy, end: dd/mm/yy}">
          </textarea>
          <br>
          <button type="button" class="btn btn-success pull-right" 
                  ng-click="importEvents(data.events)">
              Add 
              <i class="fa fa-plus"></i>
          </button>
        </form>

      </div>

      
    </div>
  </body>
</html>

